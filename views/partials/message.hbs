{{#if successMsg}}
<div class="alert alert-dismissible alert-success animate__animated animate__bounceIn msgAlert">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <div class="text-success fs-3 fw-bold">
    <i class="fas fa-check-circle"></i>
    <span>{{successMsg}}</span>
  </div>
</div>
{{/if}}
{{#if alertMsg}}
<div class="alert alert-dismissible alert-danger animate__animated animate__bounceIn msgAlert">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <div class="text-danger fs-3 fw-bold">
    <i class="fas fa-exclamation-triangle"></i>
    <span>{{alertMsg}}</span>
  </div>
</div>
{{/if}}

<script>
  (async () => {
    const alertEle = document.querySelector('.alert');

    if (alertEle) {
      const alertInst = bootstrap.Alert.getOrCreateInstance(alertEle);

      await tools.wait(3000);
      alertEle.classList.remove('animate__animated', 'animate__slideInUp');
      alertEle.classList.add('animate__animated', 'animate__fadeOutDown');
      await tools.wait(1000);
      alertInst.close();
    }
  })();
</script>